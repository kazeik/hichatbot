import 'package:flutter/material.dart';
import 'package:flutter_markdown/flutter_markdown.dart';
import 'package:flutter_tex/flutter_tex.dart';

class MyMarkdownPage extends StatelessWidget {
  final String markdownData = '''
# Markdown Example

This is a Markdown example with a math formula:

\$\$\\sum_{i=1}^n i = \\frac{n(n+1)}{2}\$\$

And here's another one:

\$\$\\int_{a}^{b} f(x) dx\$\$
''';

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Markdown Example'),
      ),
      body: SingleChildScrollView(
        child: MarkdownBody(
          data: markdownData,
          onTapLink: (url) {
            // Handle link taps if needed
          },
          styleSheet: MarkdownStyleSheet(
            // Configure other Markdown styles if desired
          ),
          extensionSet: MarkdownExtensionSet(
            [
              TeXMarkdownExtension(),
            ],
          ),
        ),
      ),
    );
  }
}
